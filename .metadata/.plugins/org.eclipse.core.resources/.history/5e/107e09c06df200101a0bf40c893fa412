package java_exam;

public class TypeCasting {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 실습 과제 2026.01.15
		// 84p ~ 87p

		// 84p
		int num = 10;
		float fnum = num;
		double dnum = num;

		// 부동소수점(실수)은 정수보다 표현하는 범위가 더 큽니다
		// 부동소수점 = 정수 + 소스점
		System.out.println(num);
		System.out.println(fnum);
		System.out.println(dnum);

		System.out.println();

		// 85p
		// 부동소수점 -> 정수 변환시 소수점 밑 데이터 사라짐
		float fNum = 10.9f;
		int numBer = (int) fNum;
		System.out.println(fNum);
		System.out.println(numBer);

		double dNum = 11.15;
		numBer = (int) dNum;
		System.out.println(dNum);
		System.out.println(numBer);

		System.out.println();

		// 86p
		// 부동소수점 소수점 처리
		double d = 10.1;
		d = Math.ceil(d); // 소수점 올림
		System.out.println(d);

		d = 10.9;
		d = Math.floor(d); // 소수점 버림
		System.out.println(d);

		d = 15.18;
		d = Math.round(d); // 소수점 반올림
		System.out.println(d);
		d = 10.56;
		d = Math.round(d);
		System.out.println(d);

		System.out.println();

		// 87p
		// java 는 소수점 자리 처리가 유연하지 못함.
		// java 에서 소수점 자리 처리를 하려면 워나는 자릿수만큼 곱한 후 처리해야 함.
		double numD = 29.37;
		double numD2 = numD * 30;
		System.out.println(numD2);

		numD2 = Math.round(numD2);
		System.out.println(numD2);

		double numD3 = numD2 / 10;
		System.out.println(numD3);

	}

}
