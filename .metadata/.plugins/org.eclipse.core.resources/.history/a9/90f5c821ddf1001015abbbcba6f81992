package java_exam;

public class Variables1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 나이가 몇살인지 구해보는 나이 계산기
		// 현재 연도 - 나의 생년

		// Var Naming Convention
		// 1. 첫 번째 단어의 첫 번째 글자는 소문자로 작성.
		// 2. 두 번째 단어의 첫 번째 글자만 대문자로 작성.(Camel Case)
		// 3. 특수기호나 숫자로 시작할 수 없다.
		// 사용가능한 특수기호(_) <---- 권장하지 않음.
		{
			int nowYear = 2026;
			int myYear = 2001;
			int myAge = nowYear - myYear + 1;
			System.out.println("현재 나이 : " + (nowYear - myYear + 1));
			System.out.println("내 나이: " + "\n 줄바꿈" + myAge);
		}

		System.out.println("계산 끝났습니다.");

		// float 이 붙으면 상수로 취급이 된다.
		// float long test = 1000;
		// test = 10_000;

		long price = 1000;
		long buildingPrice = 10_000_000_000L;
		// long : 뒤에 l,L 둘다 가능
		System.out.println("int를 벗어나지 않음:" + price + "int 타입을 벗어나 long 타입으로 : " + buildingPrice);

		float ration = 5.111F;
		// float : 뒤에 f,F 둘다 가능
		double doubleRatio = 31232.321498237498237142134798123;

		System.out.println("float : " + ration + "double : " + doubleRatio);

		int a = (int) 1l;
		// 명시적 형변환 현상

		int num = Integer.MAX_VALUE;
		num = num + 1;

	}

}
