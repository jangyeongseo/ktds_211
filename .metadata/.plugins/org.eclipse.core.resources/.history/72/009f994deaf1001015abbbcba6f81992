package java_exam;

public class TypeCasting {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 실습 과제 2026.01.15
		// 84p ~ 87p
		
		// 84p
		int num = 10;
		float fnum = num;
		double dnum = num;
		
		// 부동소수점(실수)은 정수보다 표현하는 범위가 더 큽니다
		// 부동소수점 = 정수 + 소스점
		System.out.println(num);
		System.out.println(fnum);
		System.out.println(dnum);
		
		// 85p
		// 부동소수점 -> 정수 변환시 소수점 밑 데이터 사라짐
		float fNum = 10.9f;
		int numBer = (int) fNum;
		System.out.println(fNum);
		System.out.println(numBer);
		
		double dNum = 11.15;
		numBer = (int) dNum;
		System.out.println(dNum);
		System.out.println(numBer);
		
		// 86p
		// 부동소수점 소수점 처리
		double  d = 10.1;
		d = Math.ceil(d); // 소수점 올림
		System.out.println(d);
		
		d = 10.9
		d = Math.floor(d); // 소수점 버림
		System.out.println(d);
		
		d= 15.18;
		d = Math.round(d); // 소수점 반올림
		System.out.println(d);
		d = 10.56;
		d = Math.round(d);
		System.out.println(d);
		
	}

}
