package exam;

public class ForExam1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
//		1. 1 부터 100 까지의 합을 구해 출력해보세요.

		for (int i = 1; i < 100; i++) {
			i += i;
			System.out.println(i);
		}

		System.out.println();

//		2. 1 부터 100 중 홀수의 합을 구해 출력해보세요.
		for (int i = 1; i < 100; i += 3) {
			System.out.println(i += i);
		}

		System.out.println();

//		3. 1 부터 100 중 3, 5, 6의 배수만 출력해보세요.


//		4. 아래 결과가 나오게 반복문을 작성해보세요.
		for(int i = 1; i < 6; i++) {
			for(int j = 1; j <= i; j++) {
				System.out.println("*");
			}
			System.out.println("");
		}

		// 5. 1~5 답 : 1,2,3,4,5
		for (int i = 1; i < 6; i++) {
			System.out.println(i);
		}

		System.out.println();

		// 6. 5~1 답 : 5,4,3,2,1
		for (int i = 5; i > 0; i--) {
			System.out.println(i);
		}

		// Q2739
		int n = 2;

		for (int i = 1; i < 10; i++) {
			System.out.println(n + "*" + i + "=" + (n * i));
		}

		System.out.println();

		// Q8393
		n = 3;
		int sum = 0;

		for (int i = 1; i < n; i++) {
			sum = n + i;
		}
		System.out.println("총 합계 : " + sum);

		System.out.println();

		// Q25314
		n = 4;
		String l = "";
		n /= 4;

		for (int i = 0; i < n; i++) {
			l += "long ";
		}

		System.out.println();

	}

}
