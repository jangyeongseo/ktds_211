package java_exam;

//class ==> 프로그램의 최소 실행 단위.
// public class HelloWorld  => 파일이름과 클래스 이름이 같아야한다.

public class HelloWorld {

	//	메소드 : 프로그램이 어떤 방법으로 실행이 될 것인지 작성하는 영역.
	//	public static void main(String[] args) {....}
	//	HelloWorld 클래스를 실행시킬 수 있는 메소드
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// "Hello, World!" 문장을 출력해보자!
		// 출력을 위한 코드 : System.out.println(출력문장은 혹은 수식);
		System.out.println("Hello, World!");
		System.out.println(10+5);
		System.out.println(10-5);
		System.out.println(10/5); // div 연산 == > 나눗셈의 몫을 구함.
		System.out.println(10%5); // mod 연산 ==> 니눗셈의 나머지를 구함
		System.out.println(10*5);
		//	실행 방법 : Windows : Ctrl +F11
		//			 MacOS : Command +  shift +F11
		
	}

}
